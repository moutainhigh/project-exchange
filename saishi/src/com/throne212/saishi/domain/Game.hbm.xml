<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.throne212.saishi.domain">
	<class name="Game" table="ss_game">
		<id column="id" name="id" type="long">
			<generator class="increment" />
		</id>
	<property name="startDate" length="100"></property>
	<property name="hour" length="100"></property>
	<property name="minute" length="100"></property>
	<property name="player" length="1024"></property>
	<property name="intro" length="1024"></property>
	<property name="type" length="100"></property>
	<property name="duration" length="100"></property>
	<property name="url" length="100"></property>
	
	

		<!-- 公用字段 -->
		<property name="createDate" column="create_date"></property>
		<property name="createName" column="create_name"></property>
		<property name="segment1"></property>
		<property name="segment2"></property>
		<property name="segment3"></property>
		<property name="segment4"></property>
		<property name="segment5"></property>
		<!-- 公用字段 end -->
		
		
	</class>
</hibernate-mapping>
