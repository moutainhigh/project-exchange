<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  	<display-name></display-name>
	<!-- Spring settings -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:spring.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- Spring settings end -->
	<listener>
		<listener-class>com.throne212.wz.listener.CommonListener</listener-class>
	</listener>
	<!-- struts2 sessiongs -->
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
		<init-param>
			<param-name>actionPackages</param-name>
			<param-value>com.throne212.wz.action</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- error page 
	<error-page>
		<error-code>404</error-code>
		<location>/404.html</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/500.html</location>
	</error-page>
	-->
	<!-- rand -->
	<servlet>
		<servlet-name>RandServlet</servlet-name>
		<servlet-class>com.throne212.wz.servlet.RandServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RandServlet</servlet-name>
		<url-pattern>/rand.servlet</url-pattern>
	</servlet-mapping>
	
	<!-- struts2 sessiongs end -->
	<welcome-file-list>
		<welcome-file>/index.html</welcome-file>
	</welcome-file-list>
</web-app>
