<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<!-- Spring settings -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:spring*.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	<!-- common listener -->
	<listener>
		<listener-class>com.throne212.auto.listener.CommonListener</listener-class>
	</listener>
	<filter>
    	<filter-name>newsclick</filter-name>
    	<filter-class>com.throne212.auto.filter.NewsFilter</filter-class>
    </filter>
    <filter-mapping>
    	<filter-name>newsclick</filter-name>
    	<url-pattern>/news/*</url-pattern>
    </filter-mapping>
    <!-- struts2 sessiongs -->
    <filter>
    	<filter-name>struts2</filter-name>
    	<filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
    </filter>
    <filter-mapping>
    	<filter-name>struts2</filter-name>
    	<url-pattern>*.action</url-pattern>
    </filter-mapping>
    <filter-mapping>
    	<filter-name>struts2</filter-name>
    	<url-pattern>*.htm</url-pattern>
    </filter-mapping>
    <servlet>
		<servlet-name>rand</servlet-name>
		<servlet-class>com.throne212.auto.servlet.RandServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>rand</servlet-name>
		<url-pattern>/rand</url-pattern>
	</servlet-mapping>
	<!--  proxool admin --> 
	<servlet>
		<servlet-name>proxool</servlet-name> 
		<servlet-class>org.logicalcobwebs.proxool.admin.servlet.AdminServlet</servlet-class> 
	</servlet>
	<servlet-mapping>
		<servlet-name>proxool</servlet-name> 
		<url-pattern>/proxoolAdmin</url-pattern> 
	</servlet-mapping>
	<!-- image -->
	<servlet>
		<servlet-name>image</servlet-name>
		<servlet-class>com.throne212.auto.servlet.ImageServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>image</servlet-name>
		<url-pattern>/image</url-pattern>
	</servlet-mapping>
	<!-- welcome page -->
	<welcome-file-list>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<!-- session timeout -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<error-page>
		<error-code>401</error-code>
		<location>/error/401.htm</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/error/403.htm</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/error/404.htm</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error/500.htm</location>
	</error-page>
</web-app>
