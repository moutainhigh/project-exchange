<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	
	<constant name="struts.devMode" value="false" />
	<constant name="struts.ui.theme" value="simple" />
	<constant name="struts.ui.templateDir" value="template" />
	<constant name="struts.ui.templateSuffix" value="ftl" />
	<constant name="struts.action.extension" value="action,htm,php,asp,aspx"></constant>
	<constant name="struts.i18n.encoding" value="UTF-8"/>
	<constant name="struts.enable.SlashesInActionNames" value="true"></constant>
	
    <package name="struts2" namespace="/" extends="struts-default">
		<action name="login" class="com.throne212.info168.web.action.LoginAction">
			<result name="admin">/admin/index.jsp</result>
			<result name="success" type="chain">
         		<param name="actionName">infoList</param>
         		<param name="namespace">/user</param> 
			</result>
			<result name="fail">/login.jsp</result>
		</action>
		<action name="logout" class="com.throne212.tg.web.action.LogoutAction">
			<result name="success">/index.htm</result>
		</action>
		<action name="reg" class="com.throne212.tg.web.action.RegAction">
			<result name="success" type="chain">
         		<param name="actionName">infoList</param>
         		<param name="namespace">/user</param> 
			</result>
			<result name="fail">/reg.jsp</result>
		</action>
    </package>
    <package name="user" namespace="/user" extends="struts-default">
    	<interceptors>
            <interceptor name="auth" class="com.throne212.info168.web.filter.AccessInterceptor"/>
            <interceptor-stack name="authStack">
            	<interceptor-ref name="defaultStack"/>
                <interceptor-ref name="auth" />
            </interceptor-stack>
        </interceptors>
        <global-results>
			<result name="login" type="redirect">/login.html</result>
		</global-results>
		<action name="*" method="{1}" class="com.throne212.info168.web.action.UserAction">
			
		</action>
    </package>
    <package name="admin" namespace="/admin" extends="struts-default">
		<action name="*" method="{1}" class="com.throne212.info168.web.action.AdminAction">
			<result name="index" type="freemarker">/WEB-INF/template/admin/index.ftl</result>
		</action>
    </package>
	<package name="json" extends="json-default">
		<global-results>
			<result name="msg" type="json">
				<param name="root">msg</param>
			</result>
			<result name="list" type="json">
				<param name="includeProperties">list.*</param>
			</result>
		</global-results>
     	<!-- AjaxAction -->
        <action name="ajax_*" method="{1}" class="com.throne212.info168.web.action.AjaxAction">
        	<result name="area_list" type="json">
				<param name="includeProperties">  
					list\[\d+\]\.id,
					list\[\d+\]\.name
				</param>
			</result>			
		</action>		
	</package>
    
</struts>
