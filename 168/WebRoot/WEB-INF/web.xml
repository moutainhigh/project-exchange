<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<!-- Spring settings -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:spring*.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	<!-- common listener -->
	<listener>
		<listener-class>com.throne212.info168.web.listener.CommonListener</listener-class>
	</listener>
    <!-- struts2 sessiongs -->
    <filter>
    	<filter-name>struts2</filter-name>
    	<filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
    </filter>
    <filter-mapping>
    	<filter-name>struts2</filter-name>
    	<url-pattern>*.action</url-pattern>
    </filter-mapping>
    <filter-mapping>
    	<filter-name>struts2</filter-name>
    	<url-pattern>*.htm</url-pattern>
    </filter-mapping>
    
    <servlet>
		<servlet-name>rand</servlet-name>
		<servlet-class>com.throne212.info168.web.servlet.RandServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>rand</servlet-name>
		<url-pattern>/rand</url-pattern>
	</servlet-mapping>
	
	<!-- welcome page -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<!-- session timeout -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	
</web-app>
